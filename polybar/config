[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = "Actions"
label-open-foreground = ${colors.secondary}
label-open-background= ${colors.background-alt}
label-close = "Close"
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = "Power Actions"
menu-0-0-exec = menu-open-1
menu-0-1 = "Emacs Actions"
menu-0-1-exec = menu-open-2
menu-0-2 = "Light Actions"
menu-0-2-exec = menu-open-3
menu-0-3 = "Programs"
menu-0-3-exec = menu-open-4

menu-1-0 = "Shutdown"
menu-1-0-exec = shutdown now
menu-1-1 = "Reboot"
menu-1-1-exec = shutdown -r now
menu-1-2 = "Lock"
menu-1-2-exec = i3lock-fancy

menu-2-0 = "Kill"
menu-2-0-exec = emacsclient -e '(save-buffers-kill-emacs)'
menu-2-1 = "Start"
menu-2-1-exec = emacs --daemon
menu-2-2 = "Show"
menu-2-2-exec = emacsclient --create-frame

menu-3-0 = "Normal"
menu-3-0-exec = xrandr --output eDP1 --brightness 1
menu-3-1 = "Gamma 70"
menu-3-1-exec = xrandr --output eDP1 --brightness .7
menu-3-2 = "Gamma 50"
menu-3-2-exec = xrandr --output eDP1 --brightness .5
menu-3-3 = "Gamma 30"
menu-3-3-exec = xrandr --output eDP1 --brightness .3
menu-3-4 = "Night mode"
menu-3-4-exec = xrandr --output eDP1 --gamma 0.8:0.6:0.4
menu-3-5 = "heavy Night mode"
menu-3-5-exec = xrandr --output eDP1 --gamma 0.6:0.4:0.2

menu-4-0 = "Chromium"
menu-4-0-exec = chromium
menu-4-1 = "Filemanager"
menu-4-1-exec = nautilus
menu-4-2 = "Terminal"
menu-4-2-exec = gnome-terminal
menu-4-3 = "Program launcher"
menu-4-3-exec = dmenu_run -b -fn "$font-windows:pixelsize=18" 


